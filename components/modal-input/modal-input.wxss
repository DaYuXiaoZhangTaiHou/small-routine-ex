.modal-include-input {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.modal-include-input .modal-mask {
  height: 100%;
  background-color: black;
  opacity: 0.3;
}

.modal-include-input .modal-content {
  position: absolute;
  bottom: 406rpx;
  left: 5%;
  width: 676rpx;
  z-index: 1;
  height: 420rpx;
  background-color: white;
  border-radius: 30rpx;
}

.modal-include-input .modal-header {
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  text-align: center;
}

.modal-include-input .modal-body {
  text-align: center;
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-bottom: 10rpx;
}

.modal-include-input .modal-footer {
  width: 100%;
  position: absolute;
  bottom: 0;
  display: flex;
  border-top: solid 2rpx #ccc;
  /* color: #ccc; */
}

.modal-include-input .modal-btn {
  flex-grow: 1;
  text-align: center;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}

.modal-include-input .modal-btn.modal-cancel {
  border-right: solid 1px #ccc;
}

.modal-input{
  width: 80%;
  border: solid #ccc 1rpx;
  margin: 60rpx  auto;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
}